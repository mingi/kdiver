@SUFFIX_LINE@

srcdir = @srcdir@
VPATH = @srcdir@

SHELL = @SHELL@

@SET_MAKE@

CC = @CC@
CFLAGS = -L. -L/usr/local/lib -Wall -Wno-pointer-arith @CFLAGS@
CXX = @CXX@
CXXFLAGS = -L. -L/usr/local/lib -Wall -Wno-pointer-arith -std=c++11 @CXXFLAGS@

LDFLAGS = @LDFLAGS@
LIBS = -lprotobuf @LIBS@
RANLIB = @RANLIB@


# ===========================================================
# end of configurable options
# ===========================================================


BX_OBJS = \
  instrument.o \
  common.o \
  logging.pb.o \
  os_linux.o \
  mem_interface.o \
  breakpoints.o \
  taint.o


BX_INCLUDES =

BX_INCDIRS = -I../.. -I$(srcdir)/../.. -I. -I$(srcdir)/.

.@CPP_SUFFIX@.o:
	$(CXX) -c $(CXXFLAGS) $(BX_INCDIRS) @CXXFP@$< @OFP@$@


.c.o:
	$(CC) -c $(CFLAGS) $(BX_INCDIRS) @CFP@$< @OFP@$@



libinstrument.a: $(BX_OBJS)
	@RMCOMMAND@ libinstrument.a
	@MAKELIB@ $(BX_OBJS)
	$(RANLIB) libinstrument.a

$(BX_OBJS): $(BX_INCLUDES)


clean:
	@RMCOMMAND@ *.o
	@RMCOMMAND@ *.a

dist-clean: clean
	@RMCOMMAND@ Makefile
